        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="code.name.monkey.retromusic.debug"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name="code.name.monkey.retromusic.ui.activities.WhatsNewActivity" />
        <activity android:name="code.name.monkey.retromusic.ui.activities.album.SmallAlbumDetailsActivity" />
        <activity android:name="code.name.monkey.retromusic.ui.activities.NowPayingActivity" />

        <receiver
            android:name="com.google.android.gms.cast.framework.media.MediaIntentReceiver"
